<?xml version="1.0" encoding="UTF-8"?>
<Element xmlns="urn:fdc:difi.no:2017:vefa:structure-1" cardinality="1..2">
    
        <Term>cac:TaxTotal</Term>
        <Name>TAX TOTAL</Name>
        <Description>When tax currency code is provided, two instances of the tax total must be present, but only one with tax subtotal.</Description>
        <Reference type="RULE">PEPPOL-EN16931-R054</Reference>
        
        <Element>
            <Term>cbc:TaxAmount</Term>
            <Name>Invoice total GST amount, Invoice total GST amount in accounting currency</Name>
            <Description>The total GST amount for the Invoice or the GST total amount expressed in the accounting currency accepted or required in the country of
                the Seller. </Description>
            <DataType>Amount</DataType>
            <Reference type="BUSINESS_TERM">BT-110-GST, BT-111-GST</Reference>
            <Reference type="RULE">BR-53-GST-SG</Reference>
            <Reference type="RULE">BR-CO-14-GST-SG</Reference>
            <Attribute>
                <Term>currencyID</Term>
                <Description>Mandatory attribute. Use BT-5 or BT-6.</Description>
                <Reference type="RULE">PEPPOL-EN16931-CL007</Reference>
                <Reference type="RULE">PEPPOL-EN16931-R051</Reference>
                <Reference type="CODE_LIST">ISO4217</Reference>
                <Value type="EXAMPLE">EUR</Value>
            </Attribute>
            
            <Value type="EXAMPLE">486.25</Value>  
        </Element>
        
        
        
        
        <Element cardinality="0..n">
            <Term>cac:TaxSubtotal</Term>
            <Name>GST BREAKDOWN</Name>
            <Description>A group of business terms providing information about GST breakdown by different categories, rates
                and exemption reasons
            </Description>
            <Reference type="BUSINESS_TERM">BG-23-GST</Reference>
            <Reference type="RULE">PEPPOL-EN16931-R053</Reference>
            <Reference type="RULE">BR-CO-18-GST-SG</Reference>
            
            <Element>
                <Term>cbc:TaxableAmount</Term>
                <Name>GST category taxable amount</Name>
                <Description>Sum of all taxable amounts subject to a specific GST category code and GST category rate (if the
                    GST category rate is applicable). 
                </Description>
                <DataType>Amount</DataType>
                <Reference type="BUSINESS_TERM">BT-116-GST</Reference>
                <Reference type="RULE">BR-45-GST-SG</Reference>
                
                
                <Attribute>
                    <Term>currencyID</Term>
                    <Description>Mandatory attribute. Use BT-5</Description>
                    <Reference type="RULE">PEPPOL-EN16931-CL007</Reference>
                    <Reference type="RULE">PEPPOL-EN16931-R051</Reference>
                    <Reference type="CODE_LIST">ISO4217</Reference>
                    <Value type="EXAMPLE">EUR</Value>
                </Attribute>
                
                <Value type="EXAMPLE">1945.00</Value> 
            </Element>
            
            <Element>
                <Term>cbc:TaxAmount</Term>
                <Name>GST category tax amount</Name>
                <Description>The total GST amount for a given GST category. </Description>
                <DataType>Amount</DataType>
                <Reference type="BUSINESS_TERM">BT-117-GST</Reference>
                <Reference type="RULE">BR-46-GST-SG</Reference>
                <Reference type="RULE">BR-CO-17-GST-SG</Reference>
                
                
                <Attribute>
                    <Term>currencyID</Term>
                    <Description>Mandatory attribute. Use BT-5</Description>
                    <Reference type="RULE">PEPPOL-EN16931-CL007</Reference>
                    <Reference type="RULE">PEPPOL-EN16931-R051</Reference>
                    <Reference type="CODE_LIST">ISO4217</Reference>
                    <Value type="EXAMPLE">EUR</Value>
                </Attribute>
                <Value type="EXAMPLE">486.25</Value> 
            </Element>
            
            <Element>
                <Term>cac:TaxCategory</Term>
                <Name>VAT CATEGORY</Name>
                
                <Element>
                    <Term>cbc:ID</Term>
                    <Name>GST category code</Name>
                    <Description>Coded identification of a GST category.</Description>
                    <DataType>Code</DataType>
                    <Reference type="BUSINESS_TERM">BT-118-GST</Reference>  
                    <Reference type="CODE_LIST">UNCL5305</Reference>  
                    <Reference type="RULE">BR-47-GST-SG</Reference>
                    <Reference type="RULE">BR-CL-17-GST-SG</Reference>
                    <Reference type="RULE">BR-NG-01-GST-SG</Reference>
                    <Value type="EXAMPLE">S</Value> 
                </Element>
                
                <Element cardinality="0..1">
                    <Term>cbc:Percent</Term>
                    <Name>GST category rate</Name>
                    <Description>The GST rate, represented as percentage that applies for the relevant GST category.</Description>
                    <DataType>Percentage</DataType>
                    <Reference type="BUSINESS_TERM">BT-119-GST</Reference>
                    <Reference type="RULE">BR-48-GST-SG</Reference>
                    <Value type="EXAMPLE">25</Value> 
                </Element>
                
                <Element cardinality="0..1">
                    <Term>cbc:TaxExemptionReasonCode</Term>
                    <Name>GST exemption reason code</Name>
                    <Description>A coded statement of the reason for why the amount is exempted from GST.</Description>
                    <DataType>Text</DataType>
                    <Reference type="BUSINESS_TERM">BT-121-GST</Reference>
                </Element>
                
                <Element cardinality="0..1">
                    <Term>cbc:TaxExemptionReason</Term>
                    <Name>GST exemption reason text</Name>
                    <Description>A textual statement of the reason why the amount is exempted from GST or why no GST is being
                        charged. 
                    </Description>
                    <DataType>Text</DataType>
                    <Reference type="BUSINESS_TERM">BT-120-GST</Reference>
                    <Value type="EXAMPLE">Exempt</Value> 
                </Element>
                <Element>
                    <Term>cac:TaxScheme</Term>
                    <Name>TAX SCHEME</Name>
                    
                    <Element>
                        <Term>cbc:ID</Term>
                        <Description>Mandatory element. Use “VAT”</Description>
                        <Value type="DEFAULT">VAT</Value>
                    </Element>
                </Element>
            </Element>
        </Element>
        
        
        
    </Element>
    